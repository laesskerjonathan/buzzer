<head>
    <title>Delete Pitch</title>
    <style>
        table {
            border: 1px solid black;
        }
        th, td {
            border: 1px solid black;
            padding: 3px;
        }
        th {
            background-color: #f5f5f5;
        }
    </style>
</head>
<body>
    <h1>Registered Pitches</h1>
    <table style="width:100%;">
        <tr>
            <th>Pitch ID</th>
            <th>Speaker</th> 
            <th>Title</th>
            <th>Date</th>
        </tr>
        {{range .}}
        <tr>
            <td style="text-align:center;width:10%;">{{.Id}}</td>
            <td style="width:25%;">{{.Speaker}}</td>
            <td style="width:45%;">{{.Title}}</td>
            <td style="text-align:center;width:20%;">{{.FormattedDate}}</td>
        </tr>
        {{end}}
    </table>
    <br/>
    <form action="/remove" method="POST">
        Pitch ID: <input type="text" name="pitchid"> <input type="submit" value="Delete">
    </form>
</body>
