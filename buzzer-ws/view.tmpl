<head>
<title>Pitches</title>
<style>
    table {
        border: 1px solid black;
    }
    th, td {
        border: 1px solid black;
        padding: 3px;
    }
    th {
        background-color: #f5f5f5;
    }
</style>
</head>
<body>
    <h1>Registered Pitches</h1>
    <table style="width:100%;">
        <tr>
            <th style="width:5%;">Pitch ID</th>
            <th style="width:25%;">Speaker</th> 
            <th style="width:40%;">Title</th>
            <th style="width:15%;">Date</th>
            <th style="width:15%;">Released</th>
        </tr>
        {{range .}}
        <tr>
            <td style="text-align:center;">{{.Id}}</td>
            <td style="">{{.Speaker}}</td>
            <td style="">{{.Title}}</td>
            <td style="text-align:center;">{{.FormattedDate}}</td>
            <td style="text-align:center;">{{.FormattedReleasedAt}}</td>
        </tr>
        {{end}}
    </table>
    <br/>
    <input type="button" onclick="location.href='/add';" value="Register Pitch" />
    <input type="button" onclick="location.href='/del';" value="Delete Pitch" />
</body>
